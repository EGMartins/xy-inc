<div class="nested-fields">

	<div class="input-group">
			<div class="field col-md-6">
				<%= f.text_field :field_name, class: 'form-control', placeholder: 'Nome do campo' %>
			</div>


			<div class='field col-md-4'>
				<%= f.select :field_type, %w[String Integer BigDecimal Boolean Date], {prompt: "Tipo do campo"}, {class: "form-control"} %>
			</div>

			<span class="input-group-btn col-md-2">
        <%= link_to_remove_association "Remover campo", f , class: 'btn btn-danger'%>
   		</span>
	</div>
</div>
<br>
